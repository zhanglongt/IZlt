<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/login_width1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/login_height1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_height3"
            android:text="账号:"
            android:textColor="@color/white"
            android:textSize="@dimen/login_text_size1" />

        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:background="@null"
            android:drawableBottom="@drawable/line"
            android:textColor="@color/white"
            android:textSize="@dimen/login_text_size1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/login_width1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/login_height4">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_height3"
            android:text="密码:"
            android:textColor="@color/white"
            android:textSize="@dimen/login_text_size1" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:background="@null"
            android:drawableBottom="@drawable/line"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textSize="@dimen/login_text_size1" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_submitID"
        android:layout_width="@dimen/login_width1"
        android:layout_height="@dimen/login_height6"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/login_height5"
        android:background="@drawable/button_selector"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/login_text_size1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_height7"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/login_text_size2" />

        <TextView
            android:id="@+id/forgetPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="@dimen/login_height7"
            android:text="忘记密码?"
            android:textColor="@color/white"
            android:textSize="@dimen/login_text_size2" />
    </LinearLayout>

</LinearLayout>
